<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:Organon.XForms.Effects;assembly=Organon.XForms.Effects"          
		     x:Class="Organon.XForms.SampleApp.Views.LabelPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="SizeFontToFitEffect"/>
            <Label Text="This is a really, really, really long sentance that will get shrunk to fit into the available space">
                <Label.Effects>
                    <effects:SizeFontToFitEffect />
                </Label.Effects>
            </Label>
            <Label Text="This is a short label">
                <Label.Effects>
                    <effects:SizeFontToFitEffect />
                </Label.Effects>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
